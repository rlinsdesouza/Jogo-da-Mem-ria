<?xml version="1.0" encoding="utf-8"?>
    <!--https://o7planning.org/en/10473/android-gridview-tutorial-->
        <!--https://guides.codepath.com/android/Using-a-BaseAdapter-with-ListView-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:orientation="horizontal">


    <ImageView
            android:id="@+id/lista_imagem_professor"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/lista_professor_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="30dp" />

        <TextView
                android:id="@+id/lista_professor_frase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frase Marcante"
                android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
