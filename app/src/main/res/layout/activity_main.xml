<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".MainActivity">



        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

        >
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:text="Listar professores"
                    android:id="@+id/MainBTListarProfessores"
            />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:text="Listar Records"
                    android:id="@+id/MainBTListarRecords"
            />
        </com.google.android.material.appbar.AppBarLayout>



    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:text="Iniciar jogo Fácil"
            android:id="@+id/MainBTIniciar"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar jogo Médio"
            android:id="@+id/MainBTIniciarMedio"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar jogo Difícil"
            android:id="@+id/MainBTIniciarDificil"
    />



    <TextView
            android:text="Aluno: Rafael Lins - TSI - IFPB - PDM - 2019.1 - Professora Valéria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>